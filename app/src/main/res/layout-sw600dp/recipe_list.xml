<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/recipe_list_sw600dp_width"
    android:layout_height="wrap_content"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipe_card_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/nutella_pie" />

        <TextView
            android:id="@+id/recipe_main_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/recipe_card_image"
            android:layout_centerVertical="true"
            android:alpha="0.7"
            android:background="@color/black"
            android:paddingBottom="@dimen/recipe_list_padding"
            android:paddingLeft="@dimen/recipe_list_padding"
            android:paddingRight="@dimen/recipe_list_padding"
            android:paddingTop="@dimen/recipe_list_padding_top"
            android:text="@string/nutella_pie"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/recipe_list_text"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>