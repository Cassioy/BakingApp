<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recipe_widget_layout"
    android:background="@color/widget_list_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/widget_recipe_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/nutella_pie" />

    <TextView
        android:id="@+id/widget_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/widget_recipe_image"
        android:layout_alignParentStart="true"
        android:alpha="0.7"
        android:background="@color/black"
        android:paddingBottom="@dimen/widget_padding"
        android:paddingLeft="@dimen/widget_padding"
        android:paddingRight="@dimen/widget_padding"
        android:paddingTop="@dimen/widget_padding_top"
        android:text="NUTELLA PIE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/widget_recipe_name_text_tablet"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_margin"
        android:layout_below="@+id/widget_recipe_name"
        android:background="@color/widget_list_color"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/widget_recipe_name_text"
        android:textStyle="bold|italic" />



</RelativeLayout>